\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{wralistings}[2015/08/13 A package to configure the listings environment to my needs and provide a definition for pseudocode]

\RequirePackage{listings}

%% configure appearance of listings
\lstset{
	breaklines=true,
	postbreak=\raisebox{0ex}[0ex][0ex]{\ensuremath{\hookrightarrow\space}},
	extendedchars=true,
	numbers=left,
	numbersep=5pt}                   % how far the line-numbers are from the code}


%% Pseudocode language definition
\lstdefinelanguage{Pseudocode}{
  keywords={if, then, while, for, do, else, fi, od, return, to,
    integer, bool, node, null},
  keywordstyle=\bfseries,
  sensitive=false,
  comment=[l]{//},
  morecomment=[s]{/*}{*/},
  commentstyle=\itshape
}
